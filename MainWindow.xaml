<Window x:Class="CRM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM"
        mc:Ignorable="d"
        Title="MainWindow" 
        Icon=".\\logo_ico.ico"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow">
    <Grid Background="#F2E8E8">
        <Button x:Name="Create_Database" Cursor="Hand" Click="Create_Database_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="700px" FontSize="80px" FontWeight="Bold" Background="#00FF2F" BorderBrush="Black" BorderThickness="4px">Create Database</Button>
        <Button x:Name="Open_Database" Cursor="Hand" Click="Open_Database_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="700px" Margin="0,140,0,0" FontSize="80px" FontWeight="Bold" Background="#00FF2F" BorderBrush="Black" BorderThickness="4px">Open Database</Button>
        <Button x:Name="Close_MainWindow" Cursor="Hand" Click="Close_MainWindow_Click" FontSize="50px" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="700px" Height="100px" Background="AntiqueWhite" Foreground="Black" BorderBrush="Black" BorderThickness="4px">
            <TextBlock VerticalAlignment="Center">Exit</TextBlock>
        </Button>
        <Button x:Name="Documentation" Cursor="Hand" Click="Documentation_Click" FontSize="50px" HorizontalAlignment="Right" VerticalAlignment="Top" Width="50px" Height="60px" Background="Black" Foreground="WhiteSmoke">
            <TextBlock VerticalAlignment="Center">?</TextBlock>
        </Button>
        <Button x:Name="Test" Click="Test_Click" Width="50px" Height="60px" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,60,0" FontSize="25px" Background="Black" Foreground="WhiteSmoke">Test</Button>
    </Grid>
</Window>
