<Window x:Class="CRM.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM"
        xmlns:templates="clr-namespace:CRM.Templates"
        mc:Ignorable="d"
        Title="MainWindow" 
        Icon="../Assets/logo_ico.ico"
        WindowStyle="ThreeDBorderWindow"
        WindowState="Maximized"
        ResizeMode="CanResize">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="VisibilityConverter" />
    </Window.Resources>

    <Grid Background="#F2E8E8" ShowGridLines="True">

        <Button Grid.Row="0" Grid.Column="0" Command="{Binding CreateDatabase}" Content="Create Database"
           Cursor="Hand" HorizontalAlignment="Left" VerticalAlignment="Top" Width="700px" FontSize="80px"
           FontWeight="Bold" Background="#00FF2F" BorderBrush="Black" BorderThickness="4px" Margin="10,0,0,0">
        </Button>
        <Button Grid.Row="0" Grid.Column="1" Command="{Binding OpenDocumentation}" Content="?" Cursor="Hand"
           FontSize="50px" HorizontalAlignment="Right" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
           Width="50px" Height="60px" Background="#F2E8E8" Foreground="Black" BorderThickness="0">
        </Button>
        <Button Grid.Row="1" Grid.Column="0" Command="{Binding OpenDatabase}" Cursor="Hand" HorizontalAlignment="Left"
           VerticalAlignment="Top" Width="700px" FontSize="80px" FontWeight="Bold" Background="#00FF2F" Margin="10,150,0,0"
           BorderBrush="Black" BorderThickness="4px">Open Database</Button>
        <Button Grid.Row="2" Grid.Column="0" Command="{Binding ExitSystem}" Content="Exit" Cursor="Hand" FontSize="50px"
           FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="700px" Margin="10,0,0,0"
           Height="100px" Background="AntiqueWhite" Foreground="Black" BorderBrush="Black" BorderThickness="4px">
        </Button>

        <templates:CreateDatabaseControl Visibility="{Binding CreateDatabaseControlVisibility, Converter={StaticResource VisibilityConverter}}" />
        <templates:OpenDatabaseConrtol Visibility="{Binding OpenDatabaseControlVisibility, Converter={StaticResource VisibilityConverter}}" />
    </Grid>
</Window>
