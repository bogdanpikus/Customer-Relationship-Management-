<Window x:Class="CRM.Views.ModalWindows.GroupCreateFromStorageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM.Views.ModalWindows"
        mc:Ignorable="d"
        Title="Окно создания группы" Height="220" Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ThreeDBorderWindow">
    <Grid Background="WhiteSmoke">
        <StackPanel Margin="5,0,0,0" Grid.Row="1">
            <StackPanel VerticalAlignment="Top" Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                     VerticalContentAlignment="Center" Cursor="Help" Text="{Binding StorageName}"
                     Height="50" Tag="Введите название группы" FontSize="20" Margin="0,10,0,0" ToolTip="Введите название группы"/>
                </StackPanel>
                <ComboBox ItemsSource="{Binding StoragesSelection}" IsReadOnly="True" Width="400" HorizontalAlignment="Left" Height="50">
                    
                </ComboBox>
            </StackPanel>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="200" Margin="0,20,0,5">
            <Button Content="Подтвердить" FontSize="30" Command="{Binding Confirm}"/>
        </StackPanel>
    </Grid>
</Window>
