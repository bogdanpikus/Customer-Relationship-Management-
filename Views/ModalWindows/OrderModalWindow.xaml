<Window x:Class="CRM.Views.ModalControls.OrderModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM.Views.ModalControls"
        xmlns:val="clr-namespace:CRM.ValidationRules"
        mc:Ignorable="d"
        Title="Добавить заказ" MaxHeight="700" Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ThreeDBorderWindow"
        SizeToContent="Height"
        Icon="/Assets/logo_ico.ico">
    
    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="55" />
            <RowDefinition  Height="*"/>
        </Grid.RowDefinitions>

        <ToolBarTray Grid.Row="0">
            <ToolBar Cursor="Hand">
                <Button Height="50" Width="50" FontSize="30" Content="+"/>
            </ToolBar>
        </ToolBarTray>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="5,0,0,0">
                <StackPanel VerticalAlignment="Top" Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <DatePicker Style="{StaticResource CustomDatePickerStyle}" Text="{Binding Date}" Width="400" 
                                 VerticalContentAlignment="Center" Cursor="Hand" SelectedDate="{Binding Date}" 
                                 Height="50" FontSize="20" Margin="0,5,0,0">
                        </DatePicker>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                 VerticalContentAlignment="Center" Cursor="Hand" Text="{Binding Articul}"
                                 Height="50" Tag="Введите артикул товара" FontSize="20" Margin="0,10,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                 VerticalContentAlignment="Center" Cursor="Hand" Text="{Binding OrderID}"
                                 Height="50" Tag="Введите идентификационный номер заказа" FontSize="20" Margin="0,10,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                 VerticalContentAlignment="Center" Cursor="Hand" Text="{Binding SecondName}"
                                 Height="50" Tag="Введите фамилию заказчика" FontSize="20" Margin="0,10,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                 VerticalContentAlignment="Center" Cursor="Hand" Text="{Binding Name}"
                                 Height="50" Tag="Введите имя заказчика" FontSize="20" Margin="0,10,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                 VerticalContentAlignment="Center" Cursor="Hand" Text="{Binding Surname}"
                                 Height="50" Tag="Введите отчество заказчика" FontSize="20" Margin="0,10,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBox ToolTip="Поле для указания номера заказчика" Tag="(+38)063 321 57 80" Template="{StaticResource UkraineTextPhoneNumber}"
                                 Width="400" VerticalContentAlignment="Center" Cursor="Hand" Text="{Binding Phone}"
                                 Height="50" FontSize="20" Margin="0,10,0,0">
                        </TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox Width="400" VerticalContentAlignment="Center"
                                  Cursor="Hand" IsEditable="True" ItemsSource="{Binding Goods}"
                                  Height="50" FontSize="20" Margin="0,10,0,0" Text="{Binding ItemName}">
                            <ComboBoxItem IsSelected="True">Введите/укажите товар</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                 VerticalContentAlignment="Center" Cursor="Hand" Text="{Binding AmountItem}"
                                 Height="50" Tag="Укажите колличество товара" FontSize="20" Margin="0,10,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                 VerticalContentAlignment="Center" Cursor="Hand" Text="{Binding Price}"
                                  Height="50" Tag="Укажите цену товара" FontSize="20" Margin="0,10,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                 VerticalContentAlignment="Center" Cursor="Hand" Text="{Binding PrimeCost}"
                                 Height="50" Tag="Укажите себестоимость" FontSize="20" Margin="0,10,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                 VerticalContentAlignment="Center" Cursor="Hand" Text="{Binding PaymentWay}"
                                 Height="50" Tag="Укажите способ оплаты товара" FontSize="20" Margin="0,10,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                 VerticalContentAlignment="Center" Cursor="Hand" Text="{Binding DeliverWay}"
                                 Height="50" Tag="Укажите способ доставки товара" FontSize="20" Margin="0,10,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                 VerticalContentAlignment="Center" Cursor="Hand" Text="{Binding DeliverAdress}"
                                 Height="50" Tag="Укажите адрес доставки товара" FontSize="20" Margin="0,10,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox Width="400" VerticalContentAlignment="Center"
                                  Cursor="Hand" ItemsSource="{Binding Statuses}"
                                  Height="50" FontSize="20" Margin="0,10,0,0" Text="{Binding Status}"> 
                            <ComboBoxItem IsSelected="True">Нейтральный</ComboBoxItem>
                            <ComboBoxItem>Обрабатывается</ComboBoxItem>
                            <ComboBoxItem>Доставляется</ComboBoxItem>
                            <ComboBoxItem>Успешный</ComboBoxItem>
                            <ComboBoxItem>Отменен</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                 VerticalContentAlignment="Center" Cursor="Hand" Text="{Binding Spending}"
                                 Height="50" Tag="Укажите затраты от заказа" FontSize="20" Margin="0,10,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                 VerticalContentAlignment="Center" Cursor="Hand" Text="{Binding Income}"
                                 Height="50" Tag="Укажите прибыль от заказа" FontSize="20" Margin="0,10,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                 VerticalContentAlignment="Center" Cursor="Hand" Text="{Binding Organization}"
                                 Height="50" Tag="Укажите организацию" FontSize="20" Margin="0,10,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                        <Label Content="Комментарий к заказу" FontSize="20" Target="{Binding ElementName=text}"/>
                        <TextBox Name="text" Width="400" VerticalContentAlignment="Top" Text="{Binding Comment}"
                                 Cursor="Hand" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"
                                 Height="150" FontSize="20" HorizontalAlignment="Left"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="200"
                            Margin="0,20,0,5">
                    <Button Content="Подтвердить" FontSize="30" Command="{Binding Confirm}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
