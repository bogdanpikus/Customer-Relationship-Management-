<Window x:Class="CRM.Views.ModalWindows.ToolbarCreateNewDB"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM.Views.ModalWindows"
        mc:Ignorable="d"
        Title="Создать новую базу" MaxHeight="700" Width="428"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ThreeDBorderWindow"
        SizeToContent="Height">
    <Grid Background="Snow">
        <StackPanel Orientation="Vertical" Margin="5" VerticalAlignment="Top">
            <TextBox Text="{Binding DatabaseName}" Width="300" HorizontalAlignment="Left" Template="{StaticResource TextPlaceholderSquare}" Tag="Название новой базы данных"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <TextBox Text="{Binding SearchPlaceForDataBaseButtonLabel}" Width="300" Template="{StaticResource TextPlaceholderSquare}" Tag="...путь для сохранения базы данных"/>
                <Button Command="{Binding Brouse}"   Width="100" Content="Brouse"/>
            </StackPanel>
            <Button Command="{Binding Create}" Content="Создать" Margin="0,20,0,0"  Width="100" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
