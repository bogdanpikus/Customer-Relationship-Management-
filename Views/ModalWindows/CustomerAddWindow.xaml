<Window x:Class="CRM.Views.ModalWindows.CustomerAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM.Views.ModalWindows"
        mc:Ignorable="d"
        Title="Добавить клиента/компанию" MaxHeight="700" Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ThreeDBorderWindow"
        SizeToContent="Height"
        Icon="/Assets/logo_ico.ico">
    
    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="55" />
            <RowDefinition  Height="*"/>
        </Grid.RowDefinitions>

        <ToolBar  Background="LightGray" Grid.Row="0">
            <ToolBar.Template>
                <ControlTemplate TargetType="ToolBar">
                    <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                        <StackPanel Orientation="Horizontal"
                            IsItemsHost="True"/>
                    </Border>
                </ControlTemplate>
            </ToolBar.Template>
            <ComboBox Width="200" VerticalContentAlignment="Center" ItemsSource="{Binding ComboItems}"
                      Cursor="Hand" IsEditable="False" Height="40" FontSize="20"  SelectedItem="{Binding SelectedItems, Mode=TwoWay}"/>
        </ToolBar>

            <StackPanel Margin="5,0,0,0" Grid.Row="1">
                <StackPanel VerticalAlignment="Top" Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <DatePicker Style="{StaticResource CustomDatePickerStyle}" Text="{Binding Date}" Width="400" 
                                    VerticalContentAlignment="Center" Cursor="Help" SelectedDate="{Binding Date}" 
                                    Height="50" FontSize="20" Margin="0,5,0,0" ToolTip="Введите дату заказа">
                        </DatePicker>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                              VerticalContentAlignment="Center" Cursor="Help" Text="{Binding SecondName}"
                              Height="50" Tag="Введите фамилию заказчика" FontSize="20" Margin="0,10,0,0" ToolTip="Введите фамилию заказчика"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                              VerticalContentAlignment="Center" Cursor="Help" Text="{Binding Name}"
                              Height="50" Tag="Введите имя заказчика" FontSize="20" Margin="0,10,0,0" ToolTip="Введите имя заказчика"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                              VerticalContentAlignment="Center" Cursor="Help" Text="{Binding Surname}"
                              Height="50" Tag="Введите отчество заказчика" FontSize="20" Margin="0,10,0,0" ToolTip="Введите отчество заказчика"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Tag="(+38)063 321 57 80" Template="{StaticResource UkraineTextPhoneNumber}"
                              Width="400" VerticalContentAlignment="Center" Cursor="Help" Text="{Binding Phone}"
                              Height="50" FontSize="20" Margin="0,10,0,0" ToolTip="Поле для указания номера заказчика">
                        </TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Tag="Почта" Template="{StaticResource TextPlaceholderSquare}"
                                 Width="400" VerticalContentAlignment="Center" Cursor="Help" Text="{Binding Email}"
                                 Height="50" FontSize="20" Margin="0,10,0,0" ToolTip="Поле для указания почты">
                        </TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox Width="400" VerticalContentAlignment="Center"
                                  Cursor="Help" ItemsSource="{Binding Items}"
                                  Height="50" FontSize="20" Margin="0,10,0,0" Text="{Binding Item}">
                        </ComboBox>
                    </StackPanel>
                </StackPanel>

                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="200"
                         Margin="0,20,0,5">
                    <Button Content="Подтвердить" FontSize="30" Command="{Binding Confirm}"/>
                </StackPanel>
            </StackPanel>
                
            <ContentControl Visibility="{Binding CustomerModalControlVisiability, Converter={StaticResource BooleanVisiabilityConverter}}"
                        Content="{Binding CurrentContent}" Grid.Row="1" />
    </Grid>
</Window>
