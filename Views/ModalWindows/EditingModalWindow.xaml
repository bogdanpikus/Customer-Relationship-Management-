<Window x:Class="CRM.Views.ModalWindows.EditingModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM.Views.ModalWindows"
        mc:Ignorable="d"
        Title="Редактировать заказ" MaxHeight="700" Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ThreeDBorderWindow"
        SizeToContent="Height"
        Icon="/Assets/logo_ico.ico">

    <Grid Background="WhiteSmoke">
        <Grid Background="WhiteSmoke">
            <Grid.RowDefinitions>
                <RowDefinition Height="55" />
                <RowDefinition  Height="*"/>
            </Grid.RowDefinitions>

            <ToolBarTray Grid.Row="0">
                <ToolBar Cursor="Hand">
                    <Button Height="50" Width="50" FontSize="30" Content="+"/>
                </ToolBar>
            </ToolBarTray>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="5,0,0,0">
                    <StackPanel VerticalAlignment="Top" Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <DatePicker Style="{StaticResource CustomDatePickerStyle}" Text="{Binding EditDate}" Width="400" SelectedDate="{Binding EditDate}"
                                        VerticalContentAlignment="Center" Cursor="Help"
                                        Height="50" FontSize="20" Margin="0,5,0,0" ToolTip="Введите дату">
                            </DatePicker>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                     VerticalContentAlignment="Center" Cursor="Help" Text="{Binding Articul}"
                                     Height="50" Tag="Введите артикул товара" FontSize="20" Margin="0,10,0,0" ToolTip="Введите артикул товара"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                     VerticalContentAlignment="Center" Cursor="Help" Text="{Binding OrderID}"
                                     Height="50" Tag="Введите идентификационный номер заказа" FontSize="20" Margin="0,10,0,0" ToolTip="Введите идентификационный номер заказа"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                     VerticalContentAlignment="Center" Cursor="Help" Text="{Binding Surname}"
                                     Height="50" Tag="Введите фамилию заказчика" FontSize="20" Margin="0,10,0,0" ToolTip="Введите фамилию заказчика"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                     VerticalContentAlignment="Center" Cursor="Help" Text="{Binding Name}"
                                     Height="50" Tag="Введите имя заказчика" FontSize="20" Margin="0,10,0,0" ToolTip="Введите имя заказчика"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                     VerticalContentAlignment="Center" Cursor="Help" Text="{Binding SecondName}"
                                     Height="50" Tag="Введите отчество заказчика" FontSize="20" Margin="0,10,0,0" ToolTip="Введите отчество заказчика"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox ToolTip="Поле для указания номера заказчика" Tag="(+38)063 321 57 80" Template="{StaticResource UkraineTextPhoneNumber}"
                                     Width="400" VerticalContentAlignment="Center" Cursor="Help" Text="{Binding Phone}"
                                     Height="50" FontSize="20" Margin="0,10,0,0">
                            </TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <ComboBox Width="400" VerticalContentAlignment="Center"
                                      Cursor="Hand" IsEditable="True" ItemsSource="{Binding Goods}"
                                      Height="50" FontSize="20" Margin="0,10,0,0" Text="{Binding ItemName}">
                                <ComboBoxItem IsSelected="True">Введите/укажите товар</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                     VerticalContentAlignment="Center" Cursor="Help" Text="{Binding AmountItem}"
                                     Height="50" Tag="Укажите колличество товара" FontSize="20" Margin="0,10,0,0" ToolTip="Укажите колличество товара"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                      VerticalContentAlignment="Center" Cursor="Help" Text="{Binding Price}"
                                      Height="50" Tag="Укажите цену товара" FontSize="20" Margin="0,10,0,0" ToolTip="Укажите цену товара"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                     VerticalContentAlignment="Center" Cursor="Help" Text="{Binding PrimeCost}"
                                     Height="50" Tag="Укажите себестоимость" FontSize="20" Margin="0,10,0,0" ToolTip="Укажите себестоимость"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                     VerticalContentAlignment="Center" Cursor="Help" Text="{Binding PaymentWay}"
                                     Height="50" Tag="Укажите способ оплаты товара" FontSize="20" Margin="0,10,0,0" ToolTip="Укажите способ оплаты товара"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                     VerticalContentAlignment="Center" Cursor="Help" Text="{Binding DeliverWay}"
                                     Height="50" Tag="Укажите способ доставки товара" FontSize="20" Margin="0,10,0,0" ToolTip="Укажите способ доставки товара"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                     VerticalContentAlignment="Center" Cursor="Help" Text="{Binding DeliverAdress}"
                                     Height="50" Tag="Укажите адрес доставки товара" FontSize="20" Margin="0,10,0,0" ToolTip="Укажите адрес доставки товара"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <ComboBox Width="400" VerticalContentAlignment="Center"
                                      Cursor="Hand" IsEditable="False" ItemsSource="{Binding Statuses}"
                                      Height="50" FontSize="20" Margin="0,10,0,0" Text="{Binding Status}">
                                <ComboBoxItem IsSelected="True" Cursor="Hand">None</ComboBoxItem>
                                <ComboBoxItem Cursor="Hand">Обрабатывается</ComboBoxItem>
                                <ComboBoxItem Cursor="Hand">Успешный</ComboBoxItem>
                                <ComboBoxItem Cursor="Hand">Отмененный</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                     VerticalContentAlignment="Center" Cursor="Help" Text="{Binding Spending}"
                                     Height="50" Tag="Укажите затраты от заказа" FontSize="20" Margin="0,10,0,0" ToolTip="Укажите затраты от заказа"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                     VerticalContentAlignment="Center" Cursor="Help" Text="{Binding Income}"
                                     Height="50" Tag="Укажите прибыль от заказа" FontSize="20" Margin="0,10,0,0" ToolTip="Укажите прибыль от заказа"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Template="{StaticResource TextPlaceholderSquare}" Width="400"
                                 VerticalContentAlignment="Center" Cursor="Help" Text="{Binding Organization}"
                                 Height="50" Tag="Укажите организацию" FontSize="20" Margin="0,10,0,0" ToolTip="Укажите организацию"/>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                            <Label Content="Комментарий к заказу" FontSize="20" Target="{Binding ElementName=text}"/>
                            <TextBox Name="text" Width="400" VerticalContentAlignment="Top" Text="{Binding Comment}"
                                     Cursor="Help" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"
                                     Height="150" FontSize="20" HorizontalAlignment="Left" ToolTip="Комментарий к заказу"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="200"
                                Margin="0,20,0,5">
                        <Button Content="Подтвердить" FontSize="30" Command="{Binding Confirm}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
