<UserControl x:Class="CRM.Views.UserControls.ProductCreateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRM.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Background="WhiteSmoke" ShowGridLines="True" Visibility="{Binding GridVisiability, Converter={StaticResource BooleanVisiabilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="400" />
                <RowDefinition Height="150" />
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="330"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="10,0,0,0">
            <Button Command="{Binding GoBackToProducts}" Content="&lt;" Width="30" Height="50" Background="Snow"
                    Foreground="Black" FontWeight="Medium" FontSize="30" ToolTip="Вернутся назад к складам"
                    BorderBrush="Black" BorderThickness="2" Cursor="Hand" VerticalContentAlignment="Center">
            </Button>
            <TextBox Template="{StaticResource TextPlaceholderSquare}" Tag="АРТИКУЛ" Width="200" FontSize="20" 
                     VerticalContentAlignment="Center" Text="{Binding Atricul}"  Margin="5,0,0,0"/>
            <TextBox Template="{StaticResource TextPlaceholderSquare}" Tag="НАЗВАНИЕ ТОВАРА" Width="550" FontSize="20" 
                     VerticalContentAlignment="Center" Text="{Binding ProductName}" Margin="5,0,0,0" />
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0">
            <Border Width="300" Height="350" BorderBrush="Black" BorderThickness="1" 
                    HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top">
                <Grid>
                    <TextBlock Text="Загрузите изображение" Visibility="Visible" Foreground="LightGray"
                               HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25"/>
                    <Image Source="{Binding Photo}" Stretch="Uniform"
                           Visibility="{Binding Photo, Converter={StaticResource BooleanVisiabilityConverter}}"/>
                </Grid>
            </Border>
            <StackPanel Orientation="Horizontal">
                <Button Content="Загрузить изображение..." Width="150" Height="30" HorizontalAlignment="Left" Margin="10,0,0,0"
                        Cursor="Hand"/>
                <Button Content="Удалить изображение" Width="150" Height="30" HorizontalAlignment="Left" Margin="0,0,0,0"
                        Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Margin="0,10,0,0" Orientation="Vertical" Grid.Row="1" Grid.Column="1"
                    VerticalAlignment="Top" >
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left"  Margin="10,10,0,0">
                <ComboBox Height="30" FontSize='20' Width="200" SelectedItem="{Binding ActivityLabel, Mode=TwoWay}">
                    <ComboBoxItem Content="Активный"/>
                    <ComboBoxItem Content="Неактивный"/>
                    <ComboBoxItem Content="Скрыт"/>
                </ComboBox>
                <ComboBox Height="30" FontSize='20' Width="200" SelectedItem="{Binding StatusLabel, Mode=TwoWay}"
                      Margin="0,5,0,0">
                    <ComboBoxItem Content="Хит продаж"/>
                    <ComboBoxItem Content="Ублюдок"/>
                    <ComboBoxItem Content="Никакой"/>
                </ComboBox>
            </StackPanel>

            <TextBox  Width="1000" Height="300"
                 Template="{StaticResource TextPlaceholderSquare}" Tag="Описание" FontSize="20"
                 HorizontalAlignment="Left" Margin="10,7,0,0" TextWrapping="Wrap"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Top" Orientation="Horizontal" Margin="10">
            <Label Content="Цена:" FontSize="20" Target="{Binding ElementName=price}"/>
            <TextBox Name="price" Width="130"  FontSize="20"  Template="{StaticResource TextPlaceholderSquare}"
                     Height="25"/>
            <Label Content="за" FontSize="20" Target="{Binding ElementName=amount}"/>
            <TextBox Name="amount" Width="70"  FontSize="20"  Template="{StaticResource TextPlaceholderSquare}"
                      Height="25"/>
            <Label Content="штук(у)" FontSize="20" Target="{Binding ElementName=amount}"/>
            <Label Content=":" FontSize="20"/>
            <Label Content="за больше" FontSize="20" Target="{Binding ElementName=opt}"/>
            <TextBox Name="opt" Width="70"  FontSize="20"  Template="{StaticResource TextPlaceholderSquare}"
                      Height="25"/>
            <Label Content="скидка" FontSize="20" Target="{Binding ElementName=discount}"/>
            <TextBox Name="discount" Width="70" FontSize="20" Template="{StaticResource TextPlaceholderSquare}"
                     Tag="%"  Height="25" />
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Top" Orientation="Horizontal" Margin="10,50,0,0">
            <Label Content="Себестоимость:" FontSize="20" Target="{Binding ElementName=primePrice}"/>
            <TextBox Name="primePrice" Width="130"  FontSize="20"  Template="{StaticResource TextPlaceholderSquare}"
                    Height="25"/>
            <ComboBox Height="25" FontSize='13' HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                      Width="50" SelectedItem="{Binding Сurrency, Mode=TwoWay}"
                      Margin="5,0,0,0">
                <ComboBoxItem IsSelected="True" Content="грн"/>
            </ComboBox>
            <Label Content="за:" FontSize="20" Target="{Binding ElementName=primeAmount}"/>
            <TextBox Name="primeAmount" Width="40"  FontSize="20"  Template="{StaticResource TextPlaceholderSquare}"
                     Height="25"/>
            <Label Content="штук(у)" FontSize="20" Target="{Binding ElementName=primeAmount}"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Top" Orientation="Horizontal" Margin="16,100,0,0">
            <TextBox Width="420"  FontSize="18"  Template="{StaticResource TextPlaceholderSquare}"
                     Height="25" Tag="Комиссия за реализаццию 1 единицы товара"/>
            <ComboBox Height="25" FontSize='13' HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                      Width="50" SelectedItem="{Binding Сurrency, Mode=TwoWay}"
                      Margin="5,0,0,0">
                <ComboBoxItem IsSelected="True" Content="грн"/>
            </ComboBox>
        </StackPanel>
            <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Height="Auto" VerticalAlignment="Top" Orientation="Vertical" Margin="16,0,0,0">
                <Border BorderBrush="Black" BorderThickness="1" Height="AUTO" Width="600" HorizontalAlignment="Left">
                    <StackPanel Orientation="Vertical">
                        <Label Content="Характеристики:" FontSize="20"/>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Цвет:" FontSize="20" Target="{Binding ElementName=color}"/>
                            <TextBox Text="{Binding Color}" Name="color" Width="140"  FontSize="18"  Template="{StaticResource TextPlaceholderSquare}"
                                     Height="25"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Единица измерения:" FontSize="20" Target="{Binding ElementName=Measurement}"/>
                            <TextBox Text="{Binding Measurement}" Name="Measurement" Width="140"  FontSize="18"  Template="{StaticResource TextPlaceholderSquare}"
                                     Height="25"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Колличество на складе:" FontSize="20" Target="{Binding ElementName=Amount}"/>
                            <TextBox Text="{Binding Amount}" Name="Amount" Width="140"  FontSize="18"  Template="{StaticResource TextPlaceholderSquare}"
                                 Height="25"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Категория товара:" FontSize="20" Target="{Binding ElementName=Category}"/>
                            <TextBox Text="{Binding Category}" Name="Category" Width="140"  FontSize="18"  Template="{StaticResource TextPlaceholderSquare}"
                                     Height="25"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Поставшик/Производитель товара:" FontSize="20" Target="{Binding ElementName=Supplier}"/>
                            <TextBox Text="{Binding Supplier}" Name="Supplier" Width="140"  FontSize="18"  Template="{StaticResource TextPlaceholderSquare}"
                                     Height="25"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Статус товара:" FontSize="20" Target="{Binding ElementName=Status}"/>
                            <ComboBox Name="Status" Height="30" FontSize='20' Width="200" SelectedItem="{Binding Status, Mode=TwoWay}" Margin="0,5,0,0">
                                <ComboBoxItem Content="В продаже"/>
                                <ComboBoxItem Content="Предзаказ"/>
                                <ComboBoxItem Content="Архив"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                            <Label Content="Комментарий у товару:" FontSize="20" Target="{Binding ElementName=Comment}"/>
                            <TextBox Text="{Binding Comment}" Name="Comment" FontSize="18"  Template="{StaticResource TextPlaceholderSquare}"
                                     Height="100" Width="500"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
            <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Top" Orientation="Vertical" Margin="16,5,0,0">
                <Border BorderBrush="Black" BorderThickness="1" Height="AUTO" Width="600" HorizontalAlignment="Left">
                    <StackPanel Orientation="Vertical">
                        <Label Content="Дополнительные характеристики:" FontSize="20"/>
                        <ItemsControl ItemsSource="{Binding Attributes}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <TextBlock Text="{Binding Key}" FontWeight="Bold"/>
                                        <TextBlock Text=": " Margin="3,0"/>
                                        <TextBlock Text="{Binding Value}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
    </Grid>
    </ScrollViewer>
</UserControl>