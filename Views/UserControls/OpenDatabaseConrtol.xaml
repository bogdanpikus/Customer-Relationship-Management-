<UserControl x:Class="CRM.Views.UserControls.OpenDatabaseConrtol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRM.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#F2E8E8" ShowGridLines="False" Visibility="{Binding OpenDatabaseVisiability, Converter={StaticResource BooleanVisiabilityConverter}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontWeight="Bold" FontSize="80" 
             Background="Black" MinWidth="815" Foreground="AliceBlue" Text="Open your Database" Margin="10,0,0,0"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10,20,0,0">
            <Button Command="{Binding SearchDataBaseFileToOpen}" Content="{Binding SearchDatabaseFileToOpenButtonLabel}"  Cursor="Hand" Height="60" Width="815" FontSize="30" FontWeight="ExtraLight"
               HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Left" Background="AliceBlue">
            </Button>
            <Button Content="Brouse" Command="{Binding SearchDataBaseFileToOpen}" FontWeight="Bold" FontSize="40" Height="60" Width="150"
                BorderBrush="Black" BorderThickness="4" Background="White" HorizontalAlignment="Left" VerticalAlignment="Top" >
            </Button>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Command="{Binding GoToMainWindowFromOpenControl}" Content="Cancel" Cursor="Hand" FontSize="50" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Bottom"
        Width="200" Height="100" Background="AntiqueWhite" Foreground="Black" BorderBrush="Black" BorderThickness="4"></Button>
            <Button Command="{Binding OpenDuckDatabaseFile}" Content='Enter' Cursor="Hand" FontSize="50" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Bottom"
        Width="200" Height="100" Background="AntiqueWhite" Foreground="Black" BorderBrush="Black" BorderThickness="4"></Button>
        </StackPanel>
        <ContentControl Content="{Binding CurrentControl}" Grid.Column="0" Grid.Row="0" Grid.RowSpan="3"/>
    </Grid>
</UserControl>
