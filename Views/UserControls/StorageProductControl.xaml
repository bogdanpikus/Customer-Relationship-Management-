<UserControl x:Class="CRM.Views.UserControls.StorageProductControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRM.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="WhiteSmoke" Visibility="{Binding CurrentVisiability, Converter={StaticResource BooleanVisiabilityConverter}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="55"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Button Command="{Binding CreateStorage}" Content="Создать склад" Width="Auto" Height="50" Background="Snow"
                    Foreground="Black" FontWeight="Medium" FontSize="20" Margin="0,0,0,0"
                    BorderBrush="Black" BorderThickness="2" Cursor="Hand">
            </Button>
            <Button Command="{Binding CreateGroup}" Content="Создать группу" Width="Auto" Height="50" Background="Snow"
                    Foreground="Black" FontWeight="Medium" FontSize="20" Margin="5,0,0,0"
                    BorderBrush="Black" BorderThickness="2" Cursor="Hand">
            </Button>
            <Button Command="{Binding CreateProduct}" Content="Создать товар" Width="Auto" Height="50" Background="Snow"
                    Foreground="Black" FontWeight="Medium" FontSize="20" Margin="5,0,0,0"
                    BorderBrush="Black" BorderThickness="2" Cursor="Hand">
            </Button>
            <Button Command="{Binding GoBackToGroups}" Content="&lt;" Width="30" Height="50" Background="Snow"
                    Foreground="Black" FontWeight="Medium" FontSize="30" ToolTip="Вернутся назад к складам"
                    BorderBrush="Black" BorderThickness="2" Cursor="Hand"  Margin="5,0,0,0">
            </Button>
        </DockPanel>
        <DockPanel Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Left">
            <Button Command="{Binding Editing}" Content="Редактировать" Width="140" Height="50" Background="Snow"
                    Foreground="Black" FontWeight="Medium" FontSize="18" Margin="0,0,0,0"
                    BorderBrush="Black" BorderThickness="1" Cursor="Hand">
            </Button>
            <Button Command="{Binding Delete}" Content="Удалить" Width="150" Height="50" Background="Snow"
                    Foreground="Black" FontWeight="Medium" FontSize="18" Margin="5,0,0,0"
                    BorderBrush="Black" BorderThickness="1" Cursor="Hand">
            </Button>
            <ComboBox Width="140" Height="50" Background="Snow" ItemsSource="{Binding Filters}"
                      Foreground="Black" FontWeight="Medium" FontSize="20" Margin="5,0,0,0"
                      BorderBrush="Black" BorderThickness="2" VerticalContentAlignment="Center"
                      HorizontalContentAlignment="Center" Cursor="Hand" SelectedItem="{Binding SelectedFilter, Mode=TwoWay}">
            </ComboBox>
        </DockPanel>

        <DockPanel Grid.Row="2"  Background="LightGray" Margin="0,10,0,0">
            <DataGrid ItemsSource="{Binding ProductCollection}" AutoGenerateColumns="False" HorizontalScrollBarVisibility="Visible"
              VerticalScrollBarVisibility="Visible" BorderThickness="0" BorderBrush="Black" 
              ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto"
              FontFamily="Arial" FontSize="14" CanUserAddRows="False" CanUserDeleteRows="False"
              GridLinesVisibility="All" HorizontalGridLinesBrush="LightGray" VerticalGridLinesBrush="LightGray"
              RowBackground="Snow" ColumnHeaderHeight="40" ClipboardCopyMode="IncludeHeader" EnableRowVirtualization="True"
              EnableColumnVirtualization="True" RowDetailsVisibilityMode="Visible" Focusable="False"
              VirtualizingPanel.VirtualizationMode="Recycling" VirtualizingPanel.IsVirtualizing="True"
              SelectionMode="Extended" SelectionUnit="CellOrRowHeader" HorizontalContentAlignment="Center"
              Cursor="Hand" ColumnWidth="160" HorizontalAlignment="Stretch" IsEnabled="True" RowHeight="50" VerticalContentAlignment="Stretch" 
              >

                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Width="25" IsReadOnly="False" Binding="{Binding IsSelected, Mode=TwoWay}" CanUserResize="False">
                        <DataGridCheckBoxColumn.Header>
                            <CheckBox IsEnabled="False" />
                        </DataGridCheckBoxColumn.Header>
                    </DataGridCheckBoxColumn>
                    <DataGridTextColumn Header="Артикул" Binding="{Binding Articul}" />
                    <DataGridTemplateColumn Header="Фото">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.OpenProduct, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}" Width="50" Height="45" FontSize="20" >
                                    <Image Source="{Binding ImagePath}" Stretch="Uniform" />
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Название" Binding="{Binding Name}" />
                    <DataGridTextColumn Header="Цвет" Binding="{Binding Color}" />
                    <DataGridTextColumn Header="Цена" Binding="{Binding Price}" />
                    <DataGridTextColumn Header="Себестоимость" Binding="{Binding PrimaryPrice}" />
                    <DataGridTextColumn Header="Прибыль от продажи" Binding="{Binding IncomeFromSelling}" />
                    <DataGridTextColumn Header="Колличество на складе" Binding="{Binding Amount}" />
                    <DataGridTextColumn Header="Комментарий" Binding="{Binding Comment}" />

                </DataGrid.Columns>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.CellStyle>
            </DataGrid>
        </DockPanel>
    </Grid>
</UserControl>
