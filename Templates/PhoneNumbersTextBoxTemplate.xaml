<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ControlTemplate x:Key="UkraineTextPhoneNumber" TargetType="{x:Type TextBox}">
        <Grid>
            <Border x:Name="BorderTextBox" Background="AliceBlue" BorderBrush="Black" BorderThickness="1" CornerRadius="0">
                <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
            </Border>
            <TextBlock x:Name="Watermark"
                       Foreground="Gray"
                       Text="{TemplateBinding Tag}"
                       Visibility="Collapsed"/>
            
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="Text" Value="">
                <Setter Property="Visibility" TargetName="Watermark" Value="Visible"/>
            </Trigger>
            <Trigger Property="IsFocused" Value="true">
                <Setter Property="BorderBrush" TargetName="BorderTextBox" Value="Aqua"/>
                <Setter Property="Visibility" TargetName="Watermark" Value="Hidden"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
</ResourceDictionary>